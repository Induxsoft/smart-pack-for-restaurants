				span(id="totalcurrent" style="width:100%;" total="#<totalcurrent>"){"#<ifstr(totalcurrent!='','$ '+totalcurrent,'')>"}
			}
			div(class="btn-cerrar")
			{
				$""
				#!
				isdesk=@@(@http_context,"request/get/desk")
