{
	div(class="title-induxsoft" id="" style="position:fixed;")
	{
			$""
			#!
			namet=@@(@http_context,"request/get/n")
			ticket=@@(@http_context,"request/get/t")
			totalcurrent=@@(@http_context,"request/get/imp")
			#$
			div(class="name_waiter"){
				h3{$"#<@name_company>"}
